{% if fields.product_id is not null and fields.product_price is not null %}
    <div class="form-group">
        <label for="recharge-expiry-date">Период важења допуне:</label>
        <input type="text" id="recharge-expiry-date"
               class="form-control form-control-plaintext"
               value="{{ fields.valid_from|date_format('d.m.Y') ~ ' - ' ~ fields.valid_until|date_format('d.m.Y') }}"
               disabled>
    </div>
    <div class="form-group">
        <label for="product-price">Цена допуне:</label>
        <input type="text" id="product-price"
               class="form-control form-control-plaintext"
               value="{{ fields.product_price|currency('дин.') }}" disabled>
    </div>
    <div class="form-group">
        <form method="post" action="{{ path_for('add.item') }}">
            <input type="hidden" name="alias-number" value="{{ fields.alias_number }}">
            <input type="hidden" name="product-id" value="{{ fields.product_id }}">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-cart-plus mr-1"></i> Купи допуну
            </button>
        </form>
    </div>
{% endif %}