<form method="post" action="{{ path_for('card.info') }}">
    <div class="form-group">
        <label for="alias-number">
            <a href="javascript:void(0);" data-toggle="modal" data-target="#help-dialog">
                <i class="fas fa-asterisk text-danger small"></i> Алиас број картице:
            </a>
        </label>
        <div class="input-group">
            <input type="text" id="alias-number" name="alias-number"
                   class="form-control form-control-lg text-center border-info"
                   value="{{ fields.alias_number|default('') }}" autofocus>
            <span class="input-group-append">
                <button class="btn btn-primary" id="search-alias-number" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>